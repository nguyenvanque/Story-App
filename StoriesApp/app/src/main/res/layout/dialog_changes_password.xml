<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_dialog"
    android:orientation="vertical"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/mnametv"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Đổi mật khẩu"
        android:inputType="text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/oldpasswordElt"
        app:passwordToggleEnabled="true"
        app:hintEnabled="false"
        android:layout_marginTop="20dp"
        android:layout_below="@id/mnametv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
       >
        <EditText
            android:id="@+id/oldpasswordEt"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_ui_click"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_key_white"
            android:drawableStart="@drawable/ic_key_white"
            android:drawablePadding="20dp"
            android:paddingLeft="8dp"
            android:paddingRight="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:hint="Nhập mật khẩu cũ"/>
    </com.google.android.material.textfield.TextInputLayout>
     <com.google.android.material.textfield.TextInputLayout
         android:layout_marginTop="10dp"
         android:id="@+id/newpasswordElt"
         app:passwordToggleEnabled="true"
         app:hintEnabled="false"
         android:layout_below="@id/oldpasswordElt"
         app:boxStrokeWidth="0dp"
         app:boxStrokeWidthFocused="0dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <EditText
             android:id="@+id/newpasswordEt"
             android:layout_marginLeft="15dp"
             android:layout_marginRight="15dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/edt_ui_click"
             android:inputType="textPassword"
             android:drawableLeft="@drawable/ic_key_white"
             android:drawableStart="@drawable/ic_key_white"
             android:drawablePadding="20dp"
             android:paddingLeft="8dp"
             android:paddingRight="12dp"
             android:paddingTop="12dp"
             android:paddingBottom="10dp"
             android:hint="Nhập mật khẩu mới"/>
     </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="12dp"
        android:id="@+id/cfnewpasswordElt"
        app:passwordToggleEnabled="true"
        app:hintEnabled="false"
        android:layout_below="@id/newpasswordElt"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/cfnewpasswordEt"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_ui_click"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_key_white"
            android:drawableStart="@drawable/ic_key_white"
            android:drawablePadding="20dp"
            android:paddingLeft="8dp"
            android:paddingRight="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:hint="Nhập mật khẩu mới"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/cfnewpasswordElt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/updateBtn"
            android:background="@drawable/button_ui2"
            android:textColor="@color/white"
            android:text="Đổi mật khẩu"
            android:layout_weight="1"
            android:layout_marginRight="7dp"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:text="Hủy"
            android:id="@+id/cancelBtn"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_marginLeft="7dp"
            android:background="@drawable/button_ui2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>

</LinearLayout>