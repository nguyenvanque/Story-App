<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:gravity="center_vertical"
    android:layout_margin="2dp"
    android:padding="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <com.makeramen.roundedimageview.RoundedImageView
      android:id="@+id/imagetruyen"
      android:src="@drawable/imagscreen"
      app:riv_corner_radius="5dp"
      android:scaleType="centerCrop"
      android:adjustViewBounds="true"
      android:layout_width="90dp"
      android:layout_height="100dp"/>

    <TextView
        android:id="@+id/txtName"
        android:text="Tên sản phẩm"
        android:textSize="17dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"

        android:layout_toRightOf="@id/imagetruyen"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtGia"
        android:text="20000"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imagetruyen"
        android:textSize="17dp"
        android:layout_marginLeft="20dp"
        android:textColor="#FB2279"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/btnTru"
            android:text="-"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:enabled="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtSoluong"
            android:text="3"
            android:textSize="17dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/btnCong"
            android:enabled="true"
            android:text="+"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>